<%- include("header") %> <%- include("sidebar") %>
<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid"></div>
  <!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= title %></h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <% if(users != ''){ %>
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr class="text-center">
                  <th>*</th>
                  <th>Form No.</th>
                  <th>Date</th>
                  <th>Course</th>
                  <th>Name</th>
                  <th>Mobile No.</th>
                  <th>Form filled By</th>
                  <th>Counselor</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach((row, index)=>{ %>
                <tr class="text-center">
                  <th><%= index + 1 %></th>
                  <td><%= row.formNo %></td>
                  <td>
                    <%= moment(row.date).utcOffset(330).format('DD-MM-YYYY') %>
                  </td>
                  <td><%= row.admission_category %></td>
                  <td><%= row.fullName %></td>
                  <td><%= row.mobileNo %></td>
                  <td><%= row.formFilledBy %></td>
                  <td><%= row.counselorName %></td>
                  <td><%= row.status %></td>
                  <td>
                    <div class="btn-group">
                      <button class="btn btn-sm btn-outline-info">More</button>
                      <button
                        type="button"
                        class="btn btn-sm btn-info"
                        data-toggle="dropdown"
                      >
                        <i class="fa fa-ellipsis-v p-1"></i> 
                      </button>
                      <div class="dropdown-menu" role="menu">
                        <a
                          href="/single-inquiry/<%= row._id %>"
                          class="text-success dropdown-item"
                          ><i class="fa fa-eye fs-lg mx-1"></i
                        >Show</a>
                        <a
                          href="/edit/single-inquiry/<%= row._id %>"
                          class="text-warning dropdown-item"
                          ><i class="fa fa-pen fs-lg mx-1"></i
                        >Edit</a>
                        <a
                          href="/delete/single-inquiry/<%= row._id %>"
                          class="text-danger dropdown-item"
                          onclick="return confirm('Are you sure you want to proceed?')"
                          ><i class="fa fa-trash fs-lg mx-1"></i
                        >Delete</a>
                      </div>
                    </div>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <% }else{ %>
            <h3 class="text-center text-secondary mt-5">
              No user found in the database
            </h3>
            <% } %>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->
</div>

<%- include("footer") %>
