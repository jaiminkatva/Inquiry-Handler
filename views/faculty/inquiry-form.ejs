<%- include("header") %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header"></div>
  <!-- /.content-header -->

  <!-- Main content -->
  <div class="content">
    <div class="container">
      <% if(message){ %>
      <div style="z-index: 5" class="fixedbutton p-1 rounded-3">
        <div
          id="message"
          class="alert alert-<%= message.type %> alert-dismissible"
        >
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-hidden="true"
          >
            &times;
          </button>
          <h5><i class="icon fas fa-check"></i> Alert!</h5>
          <%= message.message %>
        </div>
      </div>
      <% } %>
      <div class="col-sm-10 mx-auto">
        <h2
          class="text-center text-info p-2 mt-2"
          style="border-radius: 20px 20px 0px 0px"
        >
          Inquiry Form
        </h2>
        <form action="/inquiry" class="p-2" method="post">
          <h4 class="text-left text-success">
            <i class="fas fa-user m-1"></i> Personal Details
          </h4>
          <div class="mb-3 mt-3 row">
            <label for="fullName" class="col-sm-2 col-form-label"
              >Full Name</label
            >
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                name="fullName"
                id="fullName"
                minlength="5"
                maxlength="150"
                required
              />
            </div>
          </div>
          <div class="mb-3 mt-3 row">
            <label for="mobileNo" class="col-sm-2 col-form-label"
              >Mobile No</label
            >
            <div class="col-sm-4">
              <input
                type="text"
                class="form-control"
                name="mobileNo"
                id="mobileNo"
                pattern="[0-9]{10}"
                title="Please enter a 10-digit mobile number"
                required
              />
            </div>
            <label for="parentsMobileNo" class="col-sm-2 col-form-label"
              >Parents Mobile No</label
            >
            <div class="col-sm-4">
              <input
                type="text"
                class="form-control"
                name="parentsMobileNo"
                id="parentsMobileNo"
                pattern="[0-9]{10}"
                title="Please enter a 10-digit mobile number"
                required
              />
            </div>
          </div>
          <div class="mb-3 mt-3 row">
            <label for="address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
              <textarea
                name="address"
                class="form-control"
                id="address"
                rows="4"
                maxlength="300"
              ></textarea>
            </div>
          </div>
          <hr />
          <h4 class="text-left text-success">
            <i class="fas fa-user-graduate m-1"></i> Eduction Details
          </h4>
          <div class="mb-3 mt-3 row">
            <label for="board" class="col-sm-4 col-form-label">Board</label>
            <div class="col-sm-8">
              <select class="form-control" id="board" name="board">
                <option value="GSEB">GSEB</option>
                <option value="CBSE">CBSE</option>
                <option value="GU">GU</option>
                <option value="GTU">GTU</option>
                <option value="Others">Others</option>
              </select>
            </div>
          </div>
          <div class="mb-3 mt-3 row">
            <label for="schoolName" class="col-sm-4 col-form-label"
              >School / college Name</label
            >
            <div class="col-sm-8">
              <input
                type="text"
                class="form-control"
                name="schoolName"
                id="schoolName"
                maxlength="100"
                required
              />
            </div>
          </div>
          <div class="mb-3 mt-3 row">
            <label for="seat_no" class="col-sm-4 col-form-label"
              >Seat No / Enrollment No</label
            >
            <div class="col-sm-8">
              <input
                type="text"
                class="form-control"
                name="seat_no"
                id="seat_no"
                maxlength="15"
                required
              />
            </div>
          </div>
          <div class="mb-3 mt-3 row">
            <label for="result" class="col-sm-4 col-form-label">Result</label>
            <div class="col-sm-8">
              <input
                type="text"
                class="form-control"
                name="result"
                id="result"
                maxlength="10"
                required
              />
            </div>
          </div>
          <hr />
          <h4 class="text-left text-success">
            <i class="fas fa-level-up-alt m-1"></i> Course Priority
          </h4>
          <div class="mb-3 mt-3 row">
            <label for="admission_category" class="col-sm-2 col-form-label"
              >Course Name</label
            >
            <div class="col-sm-10">
              <select
                class="form-control"
                id="admission_category"
                name="admission_category"
              >
                <% courses.forEach(function(row){ %>
                <option value="<%= row.courseName %>">
                  <%= row.courseName %>
                </option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="mb-3 mt-3 row">
            <label for="priority_one" class="col-sm-2 col-form-label"
              >Priority 1</label
            >
            <div class="col-sm-4">
              <select
                class="form-control"
                id="priority_one"
                name="priority_one"
              >
                <% users.forEach(function(row){ %>
                <option value="<%= row.branchName %>">
                  <%= row.branchName %>
                </option>
                <% }) %>
              </select>
            </div>
            <label for="priority_two" class="col-sm-2 col-form-label"
              >Priority 2</label
            >
            <div class="col-sm-4">
              <select
                class="form-control"
                id="priority_two"
                name="priority_two"
              >
                <% users.forEach(function(row){ %>
                <option value="<%= row.branchName %>">
                  <%= row.branchName %>
                </option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="mb-3 mt-3 row">
            <label for="priority_three" class="col-sm-2 col-form-label"
              >Priority 3</label
            >
            <div class="col-sm-4">
              <select
                class="form-control"
                id="priority_three"
                name="priority_three"
              >
                <% users.forEach(function(row){ %>
                <option value="<%= row.branchName %>">
                  <%= row.branchName %>
                </option>
                <% }) %>
              </select>
            </div>
          </div>
          <hr />
          <div class="mb-3 mt-3 row">
            <label for="referenceName" class="col-sm-4 col-form-label"
              >Reference Name</label
            >
            <div class="col-sm-8">
              <input
                type="text"
                class="form-control"
                name="referenceName"
                id="referenceName"
                maxlength="50"
                required
              />
            </div>
          </div>
          <hr />
          <button class="btn btn-primary" type="submit">Submit</button>
        </form>
      </div>
    </div>
    <!-- /.row -->
    <!-- /.container-fluid -->
  </div>
  <!-- /.content -->
</div>

<%- include("footer") %>
